#!/bin/bash
set -euo pipefail

VERSION="${1}"
ARTIFACT="${2}"

#
# Download and install the base artifact
#
mkdir -p "${VERSION}"
python3 -m venv "${VERSION}"
"${VERSION}/bin/pip3" install "semgrep==${VERSION}"

RULESETS=(
	p/owasp-top-ten
	p/secrets
	p/java
	p/findsecbugs
)
for RULESET in "${RULESETS[@]}" ; do
	"${VERSION}/bin/semgrep" --config "${RULESET}" --dry-run
done
